//LCA: Lowest Common Ansestor in Binary tree and Bineary Search Tree.
#include<bits/stdc++.h>
using namespace std;
struct Node{
  int data;
  Node* left;
  Node* right;
  Node(int data){
      this->data = data;
      this->left = nullptr;
      this->right = nullptr;
  }
};
Node* LCA_BinaryTree(Node* root,int p, int q){
    if(root == nullptr) return nullptr;
    
    if(root->data == p || root->data == q) return root;
    
    Node* leftLca = LCA_BinaryTree(root->left,p,q);
    Node* rightLca = LCA_BinaryTree(root->right,p,q);
    
    if(leftLca && rightLca) return root;
    
    return (leftLca!=nullptr) ? leftLca : rightLca;
}

Node* LCA_binarySearchTree(Node* root,int p,int q){
    if(root == nullptr) return nullptr;
    
    if(p<root->data && q<root->data) return LCA_binarySearchTree(root->left,p,q);
    if(p>root->data && q>root->data) return LCA_binarySearchTree(root->right,p,q);
    
    return root;
}

int main(){
    cout<<"Implementing LCA in Trees"<<endl;
    
    //this is binary tree...
    Node* root1 = new Node(1);
    root1->left = new Node(2);
    root1->right = new Node(3);
    
    //this is binary search tree
    Node* root2 = new Node(2);
    root2->left = new Node(1);
    root2->right = new Node(3);
    
    Node* currentLeft = root1->left;
    currentLeft->left = new Node(4);
    currentLeft->right = new Node(5);
    
    Node* result;
    result = LCA_BinaryTree(root1,4,5);
    cout<<result->data;
    
}
